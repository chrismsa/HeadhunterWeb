<div class="container">
  <div>
    <h1 class="col-1"><%= VacuancyJob.human_attribute_name('create') %></h1>
    <h1 class="col-4"><%= VacuancyJob.model_name.human %></h1>
  </div>

  <div class="d-flex p-2">
    <%= form_with model: @vacuancy_job, local: :true do |f| %>
      <div class="form-group">
        <%= f.label :title, VacuancyJob.human_attribute_name('title') %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description, VacuancyJob.human_attribute_name('description') %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :ability_description, VacuancyJob.human_attribute_name('ability_description') %>
        <%= f.text_area :ability_description, class: "form-control" %>
      </div>

      <div>
        <p><%= VacuancyJob.human_attribute_name('salary') %></p>

        <div class="d-flex flex-row bd-highlight">
          <div class="form-group">
            <%= f.label :initial_salary, VacuancyJob.human_attribute_name('initial_salary') %>
            <%= f.number_field :initial_salary, class: "form-control" %>
          </div>

          <div class="col-auto">
            <div class="form-group">
              <%= f.label :end_salary, VacuancyJob.human_attribute_name('end_salary') %>
              <%= f.number_field :end_salary, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :level, VacuancyJob.human_attribute_name('level') %>
        <%= f.select :level, @level_selection, {}, {class: "form-control"} %>
      </div>

      <div class="form-group">
        <%= f.label :limit_date, VacuancyJob.human_attribute_name('limit_date') %>
        <%= f.date_field :limit_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :addresse, VacuancyJob.human_attribute_name('addresse') %>
        <%= f.text_field :addresse, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit VacuancyJob.human_attribute_name('create'), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <br/>
    <%= link_to Profile.human_attribute_name('back'), :back, class: "btn btn-dark" %>
  </div>
</div>