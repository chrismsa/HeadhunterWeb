<div class="container">
  <div class="d-flex">
    <h2><%= CommentOfReject.model_name.human %></h2>
    <br/>
  </div>

  <%= form_with model: [@vacuancy_job, @comment_of_reject], local: :true do |f| %>
    <%= f.label :comment, CommentOfReject.human_attribute_name('comment') %>
    <%= f.text_area :comment, class: "form-control" %>

    <%= f.hidden_field :user_id, value: @user_id %>

    <% if current_user == @vacuancy_job.user %>
      <div class="actions">
        <%= f.submit CommentOfReject.human_attribute_name('submit'), class: "btn btn-success" %>
      </div>
    <% end %>
  <% end %>
</div>